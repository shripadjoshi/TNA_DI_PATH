-form_for @user_session, {:url => user_session_path, :id => "login"} do |f|
 %fieldset
  =f.error_messages
  =f.label :login
  =f.text_field :login
 %fieldset
  =f.label :password
  =f.password_field :password
 %fieldset{:class=>"left"}
  =f.check_box :remember_me
  =f.label :remember_me, "Keep me logged in"
 %fieldset{:class=>"right"}
  = f.submit "", {:id => "button"}
 -#%br
